{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/solve-hq/dynamo-spec-generator/src/specSchema.json",
  "title": "DynamoDB Spec",
  "description": "The JSON schema for the spec json supplied to this tool",
  "type": "object",
  "properties": {
    "service": {
      "description": "The name of the service",
      "type": "string"
    },
    "tableDefinition": {
      "type": "object",
      "required": ["AttributeDefinitions", "TableName", "KeySchema"],
      "properties": {
        "AttributeDefinitions": {
          "type": "array",
          "items": {
            "$ref": "#/dynamodb/AttributeDefinition"
          },
          "minItems": 1
        },
        "TableName": {
          "description": "The name of the DynamoDB table",
          "type": "string",
          "minLength": 3,
          "maxLength": 255,
          "pattern": "^[a-zA-Z0-9._-]*$"
        },
        "KeySchema": {
          "$ref": "#/dynamodb/KeySchema"
        },
        "GlobalSecondaryIndexes": {
          "type": "array",
          "items": {
            "$ref": "#/dynamodb/GlobalSecondaryIndex"
          },
          "minItems": 1
        }
      }
    },
    "version": {
      "description": "The version of this spec",
      "type": "string",
      "minLength": 3,
      "maxLength": 255,
      "pattern": "^[a-zA-Z0-9._-]*$"
    },
    "author": {
      "description": "The author of this spec",
      "type": "string"
    },
    "accessPatterns": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/accessPattern"
      }
    },
    "records": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/record"
      }
    }
  },
  "required": ["service", "tableDefinition"],
  "dynamodb": {
    "AttributeDefinition": {
      "type": "object",
      "required": ["AttributeName", "AttributeType"],
      "additionalProperties": false,
      "properties": {
        "AttributeName": {
          "$ref": "#/definitions/attributeName"
        },
        "AttributeType": {
          "type": "string",
          "enum": ["S", "N", "B"]
        }
      }
    },
    "KeySchema": {
      "type": "array",
      "items": {
        "$ref": "#/dynamodb/KeySchemaAttribute"
      },
      "minItems": 1,
      "maxItems": 2
    },
    "KeySchemaAttribute": {
      "type": "object",
      "required": ["AttributeName", "KeyType"],
      "additionalProperties": false,
      "properties": {
        "AttributeName": {
          "$ref": "#/definitions/attributeName"
        },
        "KeyType": {
          "type": "string",
          "enum": ["HASH", "RANGE"]
        }
      }
    },
    "GlobalSecondaryIndex": {
      "type": "object",
      "required": ["IndexName", "KeySchema"],
      "properties": {
        "IndexName": {
          "description": "The name of the Global Secondary Index",
          "type": "string",
          "minLength": 3,
          "maxLength": 255,
          "pattern": "^[a-zA-Z0-9._-]*$"
        },
        "KeySchema": {
          "$ref": "#/dynamodb/KeySchema"
        },
        "Projection": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "ProjectionType": {
                  "type": "string",
                  "enum": ["ALL", "KEYS_ONLY"]
                }
              },
              "required": ["ProjectionType"]
            },
            {
              "type": "object",
              "properties": {
                "ProjectionType": {
                  "type": "string",
                  "enum": ["INCLUDE"]
                },
                "NonKeyAttributes": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/attributeName"
                  },
                  "uniqueItems": true,
                  "minItems": 1
                }
              },
              "required": ["ProjectionType", "NonKeyAttributes"]
            }
          ]
        }
      }
    }
  },
  "definitions": {
    "record": {
      "type": "object",
      "required": { "$data": "/_meta/primaryKeys" }
    },
    "accessPattern": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "index": {
          "type": "string",
          "enum": { "$data": "/_meta/indexes" }
        },
        "type": {
          "type": "string",
          "enum": ["query", "get"]
        },
        "params": {
          "$ref": "#/definitions/params"
        }
      },
      "additionalProperties": false,
      "required": ["title"]
    },
    "params": {
      "type": "object",
      "properties": {
        "sort": {
          "$ref": "#/definitions/sortParam"
        },
        "partition": {
          "oneOf": [
            {
              "type": "object",
              "required": ["value"],
              "additionalProperties": false,
              "properties": {
                "value": {
                  "$ref": "#/definitions/keyValue"
                }
              }
            },
            {
              "$ref": "#/definitions/keyValue"
            }
          ]
        },
        "filters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/filter"
          }
        },
        "order": {
          "type": "string",
          "enum": ["ASC", "DESC"],
          "default": "ASC",
          "description": "Controls the ScanIndexForward param in a query request"
        },
        "limit": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "required": ["partition"]
    },
    "sortParam": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "required": ["operator", "value"],
          "properties": {
            "operator": {
              "type": "string",
              "enum": ["=", ">", ">=", "<", "<="]
            },
            "value": {
              "anyOf": [
                { "type": "number" },
                { "type": "string" },
                { "type": "integer" }
              ]
            }
          }
        },
        {
          "type": "object",
          "required": ["operator", "value"],
          "properties": {
            "operator": { "type": "string", "enum": ["begins_with"] },
            "value": { "type": "string" }
          }
        },
        {
          "type": "object",
          "required": ["operator", "minValue", "maxValue"],
          "properties": {
            "operator": { "type": "string", "enum": ["between"] },
            "minValue": {
              "anyOf": [
                { "type": "number" },
                { "type": "string" },
                { "type": "integer" }
              ]
            },
            "maxValue": {
              "anyOf": [
                { "type": "number" },
                { "type": "string" },
                { "type": "integer" }
              ]
            }
          }
        }
      ]
    },
    "filter": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["attribute", "operator", "value", "sizeOperator"],
          "properties": {
            "attribute": {
              "$ref": "#/definitions/attributeName"
            },
            "operator": {
              "type": "string",
              "const": "size"
            },
            "value": {
              "type": "number"
            },
            "sizeOperator": {
              "type": "string",
              "enum": [">", "<", ">=", "<=", "="]
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["attribute", "operator", "value"],
          "properties": {
            "attribute": {
              "$ref": "#/definitions/attributeName"
            },
            "operator": {
              "type": "string",
              "const": "begins_with"
            },
            "value": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["attribute", "operator", "value"],
          "properties": {
            "attribute": {
              "$ref": "#/definitions/attributeName"
            },
            "operator": {
              "type": "string",
              "enum": ["=", "<>", ">", "<", ">=", "<=", "contains"]
            },
            "value": {
              "anyOf": [
                {
                  "type": "number"
                },
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["attribute", "operator", "minValue", "maxValue"],
          "properties": {
            "attribute": {
              "$ref": "#/definitions/attributeName"
            },
            "operator": {
              "type": "string",
              "const": "between"
            },
            "minValue": {
              "anyOf": [
                {
                  "type": "number"
                },
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "maxValue": {
              "anyOf": [
                {
                  "type": "number"
                },
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["attribute", "operator", "value"],
          "properties": {
            "attribute": {
              "$ref": "#/definitions/attributeName"
            },
            "operator": {
              "type": "string",
              "const": "in"
            },
            "value": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["attribute", "operator"],
          "properties": {
            "attribute": {
              "$ref": "#/definitions/attributeName"
            },
            "operator": {
              "type": "string",
              "enum": ["attribute_exists", "attribute_not_exists"]
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["attribute", "operator", "value"],
          "properties": {
            "attribute": {
              "$ref": "#/definitions/attributeName"
            },
            "operator": {
              "type": "string",
              "const": "attribute_type"
            },
            "value": {
              "type": "string",
              "enum": [
                "S",
                "SS",
                "N",
                "NS",
                "B",
                "BS",
                "BOOL",
                "NULL",
                "L",
                "M"
              ]
            }
          }
        }
      ]
    },
    "attributeName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "pattern": "^[A-Za-z0-9_.-]+$"
    },
    "keyValue": {
      "oneOf": [
        {
          "type": "number"
        },
        {
          "type": "string"
        },
        {
          "type": "integer"
        }
      ]
    }
  }
}
